<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/background"
                android:startColor="@color/background"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Bottom border with lightning yellow accent -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="2dp"/>
            <gradient
                android:angle="0"
                android:endColor="@color/lightning_yellow_dark"
                android:startColor="@color/lightning_yellow"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
