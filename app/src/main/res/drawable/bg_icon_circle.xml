<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#10000000"/>
        </shape>
    </item>
    
    <!-- Circle background -->
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:endColor="#FFFFF9E6"
                android:startColor="#FFFFF3CC"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
