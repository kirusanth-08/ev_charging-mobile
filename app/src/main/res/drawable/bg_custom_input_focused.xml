<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20FDD835"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
    <!-- Input field -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/lightning_yellow"/>
        </shape>
    </item>
</layer-list>
