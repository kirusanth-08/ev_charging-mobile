<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#15000000"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:endColor="#E0C72E"
                        android:startColor="#E0C72E"
                        android:type="linear"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#15000000"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <item
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:endColor="@color/lightning_yellow_dark"
                        android:startColor="@color/lightning_yellow"
                        android:type="linear"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
