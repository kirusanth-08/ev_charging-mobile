<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layers -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    
    <!-- Main card with subtle gradient -->
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="@color/surface"
                android:endColor="@color/surface"
                android:startColor="#FFFFF8E1"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#25FDD835"/>
        </shape>
    </item>
</layer-list>
