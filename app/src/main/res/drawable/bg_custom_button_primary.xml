<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#30FFFFFF">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#15000000"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            
            <!-- Button with gradient -->
            <item
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:endColor="@color/lightning_yellow_dark"
                        android:startColor="@color/lightning_yellow"
                        android:type="linear"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
