<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer 3 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#05000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Shadow Layer 2 -->
    <item
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#08000000"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    
    <!-- Shadow Layer 1 -->
    <item
        android:bottom="6dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Card Layer with subtle gradient -->
    <item
        android:bottom="8dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/surface"
                android:startColor="@color/surface"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF"/>
        </shape>
    </item>
</layer-list>
