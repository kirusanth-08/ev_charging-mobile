<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Handle bar for bottom sheet -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/divider"
        android:alpha="0.5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Station Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/primary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Station Icon and Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_charging_station"
                            android:tint="@android:color/white"
                            android:contentDescription="Station icon"
                            android:padding="8dp"
                            android:background="@drawable/circle_background" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/txtStationName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Station Name"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:id="@+id/txtStationStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available"
                                android:textSize="14sp"
                                android:textColor="@color/primary_light"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Distance and Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:tint="@android:color/white"
                            android:contentDescription="Location icon" />

                        <TextView
                            android:id="@+id/txtStationAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Address"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500m"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Station Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Station Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Connector Types -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupConnectors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleLine="false"
                        app:chipSpacing="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Additional Details -->
                    <TextView
                        android:id="@+id/txtStationDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Available Slots Section (Initially hidden) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Slots"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- View Slots Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewSlots"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="View Available Slots"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_charging_station"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <!-- Reserve Quick Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReserve"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Quick Reserve"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/primary"
                    android:textColor="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_bookings"
                    app:iconGravity="textStart"
                    app:iconTint="@color/primary" />

                <!-- Navigate Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNavigate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Navigate to Station"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_mylocation"
                    app:iconGravity="textStart"
                    app:iconTint="@color/primary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>